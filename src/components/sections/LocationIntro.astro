---
import { MapPin, Phone, Clock, Award } from "@lucide/astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  city: string;
  state?: string;
  description: string;
  neighborhoods?: string[];
  image?: string | ImageMetadata;
}

const {
  city,
  state = "Utah",
  description,
  neighborhoods = [],
  image = "https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?auto=format&fit=crop&q=80&w=1200",
} = Astro.props;
---

<section class="py-20 bg-linear-to-b from-gray-900 to-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div data-animate-location-content>
        <div class="flex items-center gap-3 mb-6">
          <div
            class="w-16 h-16 bg-linear-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center shadow-lg shadow-orange-500/20"
          >
            <MapPin class="w-8 h-8 text-white" />
          </div>
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-white font-inter">
              {city}
            </h1>
            <p class="text-orange-500 text-lg font-semibold">{state}</p>
          </div>
        </div>

        <p class="text-xl text-gray-300 leading-relaxed mb-8">
          {description}
        </p>

        {
          neighborhoods.length > 0 && (
            <div class="mb-8">
              <h3 class="text-xl font-bold text-white mb-4 font-inter">
                Areas We Serve:
              </h3>
              <div class="grid grid-cols-2 gap-3">
                {neighborhoods.map((neighborhood) => (
                  <div class="flex items-center gap-2 text-gray-300">
                    <div class="w-2 h-2 bg-orange-500 rounded-full" />
                    {neighborhood}
                  </div>
                ))}
              </div>
            </div>
          )
        }

        <div
          class="grid grid-cols-1 sm:grid-cols-3 gap-6 pt-6 border-t border-white/10"
        >
          <div class="flex items-start gap-3">
            <Phone class="w-6 h-6 text-orange-500 shrink-0" />
            <div>
              <div class="text-sm text-gray-400">Call Us</div>
              <a
                href="tel:+18015551234"
                class="text-white font-semibold hover:text-orange-500 transition-colors"
              >
                (801) 555-1234
              </a>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <Clock class="w-6 h-6 text-orange-500 shrink-0" />
            <div>
              <div class="text-sm text-gray-400">Response Time</div>
              <div class="text-white font-semibold">Same Day</div>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <Award class="w-6 h-6 text-orange-500 shrink-0" />
            <div>
              <div class="text-sm text-gray-400">Rating</div>
              <div class="text-white font-semibold">5.0 ★★★★★</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Image -->
      <div class="relative" data-animate-location-image>
        <div
          class="aspect-4/3 rounded-2xl overflow-hidden border-4 border-orange-500/20 shadow-2xl"
        >
          {
            typeof image === "string" ? (
              <img
                src={image}
                alt={`Handyman services in ${city}, ${state}`}
                class="w-full h-full object-cover"
              />
            ) : (
              <Image
                src={image}
                alt={`Handyman services in ${city}, ${state}`}
                class="w-full h-full object-cover"
              />
            )
          }
        </div>

        <!-- Overlay badge -->
        <div
          class="absolute top-6 right-6 bg-black/80 backdrop-blur-sm text-white px-6 py-3 rounded-lg border border-orange-500/50"
        >
          <div class="text-sm text-gray-300">Serving {city} Since</div>
          <div class="text-2xl font-bold text-orange-500">2009</div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";

  function setupLocationIntro() {
    const content = document.querySelector("[data-animate-location-content]");
    const image = document.querySelector("[data-animate-location-image]");

    if (!content || !image) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            gsap.from(content, {
              x: -60,
              opacity: 0,
              duration: 1,
              ease: "power3.out",
            });

            gsap.from(image, {
              x: 60,
              opacity: 0,
              duration: 1,
              ease: "power3.out",
              delay: 0.2,
            });

            observer.disconnect();
          }
        });
      },
      { threshold: 0.2 }
    );

    if (content) observer.observe(content);
  }

  setupLocationIntro();
  document.addEventListener("astro:page-load", setupLocationIntro);
</script>
