---
import { Phone, ArrowRight } from "@lucide/astro";
---

<section class="relative py-24 overflow-hidden cta-section">
  <!-- Background with gradient -->
  <div class="absolute inset-0 bg-linear-to-br from-orange-600 to-orange-500">
  </div>

  <!-- Decorative elements -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl transform -translate-x-1/2 -translate-y-1/2"
    >
