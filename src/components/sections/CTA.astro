      </div>

      <!-- Image/Stats -->
      <div class="relative" data-animate-image>
        <div
          class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-8 shadow-2xl"
        >
          <div class="grid grid-cols-2 gap-6">
            <div class="text-center p-6 bg-white/10 rounded-xl">
