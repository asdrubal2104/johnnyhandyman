              <div class="text-5xl font-bold mb-2">5â˜…</div>
              <div class="text-white/80">Average Rating</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";

  function setupCTAAnimation() {
    const ctas = document.querySelectorAll(".cta-section");

    ctas.forEach((cta) => {
      const content = cta.querySelector("[data-animate-content]");
      const image = cta.querySelector("[data-animate-image]");

      if (!content || !image) return;

      // Set initial state
      gsap.set(content, { opacity: 0, x: -60 });
      gsap.set(image, { opacity: 0, x: 60 });

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              // Animate to visible
              gsap.to(content, {
                opacity: 1,
                x: 0,
                duration: 1,
                ease: "power3.out",
              });

              gsap.to(image, {
                opacity: 1,
                x: 0,
                duration: 1,
                ease: "power3.out",
                delay: 0.2,
              });

              observer.unobserve(cta);
            }
          });
        },
        { threshold: 0.2 }
      );

      observer.observe(cta);
    });
  }

  setupCTAAnimation();
  document.addEventListener("astro:page-load", setupCTAAnimation);
</script>
