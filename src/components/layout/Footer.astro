---
import {
  Phone,
  Mail,
  MapPin,
  Facebook,
  Instagram,
  Linkedin,
} from "@lucide/astro";
---

<footer
  class="bg-black border-t border-white/10 text-white text-center md:text-left"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="flex items-center justify-center md:justify-start gap-3">
          <div
            class="w-12 h-12 bg-linear-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center"
          >
            <span class="text-white font-bold text-xl">JP</span>
          </div>
          <div class="flex flex-col items-center md:items-start">
            <span class="text-white font-bold text-xl font-inter"
              >Johnny Pro</span
            >
            <span class="text-orange-500 text-xs font-medium"
              >Handyman Services</span
            >
          </div>
        </div>
        <p class="text-gray-400 text-sm leading-relaxed">
          Professional handyman services across Utah. Quality workmanship,
          reliable service, and customer satisfaction guaranteed.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4 font-inter">
          Quick Links
        </h3>
        <ul class="space-y-2">
          <li>
            <a
              href="/"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Home</a
            >
          </li>
          <li>
            <a
              href="/services"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Services</a
            >
          </li>
          <li>
            <a
              href="/locations"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Locations</a
            >
          </li>
          <li>
            <a
              href="/about"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >About Us</a
            >
          </li>
          <li>
            <a
              href="/gallery"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Gallery</a
            >
          </li>
          <li>
            <a
              href="/contact"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Contact</a
            >
          </li>
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4 font-inter">
          Our Services
        </h3>
        <ul class="space-y-2">
          <li>
            <a
              href="/services/drywall-repair"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Drywall Repair</a
            >
          </li>
          <li>
            <a
              href="/services/plumbing-repair"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Plumbing</a
            >
          </li>
          <li>
            <a
              href="/services/electrical-fixes"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Electrical</a
            >
          </li>
          <li>
            <a
              href="/services/painting-services"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Painting</a
            >
          </li>
          <li>
            <a
              href="/services/carpentry-repairs"
              class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
              >Carpentry</a
            >
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4 font-inter">Contact Us</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="tel:+18015551234"
              class="flex items-center justify-center md:justify-start gap-3 text-gray-400 hover:text-orange-500 transition-colors group"
            >
              <Phone class="w-5 h-5 text-orange-500" />
              <span class="text-sm">(863) 266-1866</span>
            </a>
          </li>
          <li>
            <a
              href="mailto:info@johnnypro.com"
              class="flex items-center justify-center md:justify-start gap-3 text-gray-400 hover:text-orange-500 transition-colors group"
            >
              <Mail class="w-5 h-5 text-orange-500" />
              <span class="text-sm">info@johnnyprohandyman.com</span>
            </a>
          </li>
          <li>
            <div
              class="flex items-center justify-center md:justify-start gap-3 text-gray-400"
            >
              <MapPin class="w-5 h-5 text-orange-500" />
              <span class="text-sm">Serving all of Utah</span>
            </div>
          </li>
        </ul>

        <!-- Social Media -->
        <div class="flex justify-center md:justify-start gap-3 mt-6">
          <a
            href="#"
            class="w-10 h-10 bg-white/5 hover:bg-orange-500 rounded-lg flex items-center justify-center transition-all hover:scale-110"
            aria-label="Facebook"
          >
            <Facebook class="w-5 h-5" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-white/5 hover:bg-orange-500 rounded-lg flex items-center justify-center transition-all hover:scale-110"
            aria-label="Instagram"
          >
            <Instagram class="w-5 h-5" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-white/5 hover:bg-orange-500 rounded-lg flex items-center justify-center transition-all hover:scale-110"
            aria-label="LinkedIn"
          >
            <Linkedin class="w-5 h-5" />
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/10">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-400 text-sm">
          Â© {new Date().getFullYear()} Johnny Pro Handyman Services. All rights reserved.
        </p>
        <div class="flex gap-6">
          <a
            href="/privacy-policy"
            class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
            >Privacy Policy</a
          >
          <a
            href="/terms-of-service"
            class="text-gray-400 hover:text-orange-500 transition-colors text-sm"
            >Terms of Service</a
          >
        </div>
      </div>
    </div>
  </div>
</footer>
