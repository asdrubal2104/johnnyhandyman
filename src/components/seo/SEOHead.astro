---
const {
  title,
  description,
  canonical,
  ogImage,
  keywords = "handyman services, home repair, professional handyman, insured contractor, same-day service",
  author = "Johnny Pro Handyman",
  publisherName = "Johnny Pro Handyman Services",
} = Astro.props;

const siteUrl = Astro.site
  ? Astro.site.origin
  : "https://johnnyprohandyman.com";
const finalCanonical =
  canonical ?? new URL(Astro.url.pathname, siteUrl).toString();
const finalOgImage = ogImage ?? `${siteUrl}/images/og-default.jpg`;

// Ensure title is max 60 characters for optimal SEO
const optimizedTitle =
  title.length > 60 ? title.substring(0, 57) + "..." : title;
// Ensure description is max 155 characters for optimal SEO
const optimizedDescription =
  description.length > 155
    ? description.substring(0, 152) + "..."
    : description;
---

<title>{optimizedTitle}</title>

<meta name="description" content={optimizedDescription} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<meta name="publisher" content={publisherName} />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="theme-color" content="#f97316" />
<meta name="format-detection" content="telephone=yes" />

<link rel="canonical" href={finalCanonical} />
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Open Graph -->
<meta property="og:title" content={optimizedTitle} />
<meta property="og:description" content={optimizedDescription} />
<meta property="og:type" content="website" />
<meta property="og:url" content={finalCanonical} />
<meta property="og:image" content={finalOgImage} />
<meta property="og:image:alt" content={optimizedTitle} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="Johnny Pro Handyman" />
<meta property="og:locale" content="en_US" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={optimizedTitle} />
<meta name="twitter:description" content={optimizedDescription} />
<meta name="twitter:image" content={finalOgImage} />
<meta name="twitter:image:alt" content={optimizedTitle} />

<!-- Additional SEO -->
<meta
  name="robots"
  content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
/>
<meta name="googlebot" content="index, follow" />
<meta name="bingbot" content="index, follow" />
