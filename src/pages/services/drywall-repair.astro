---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ServiceIntro from "@/components/sections/ServiceIntro.astro";
import FAQ from "@/components/sections/FAQ.astro";
import CTA from "@/components/sections/CTA.astro";
import SchemaService from "@/components/seo/SchemaService.astro";
import Breadcrumbs from "@/components/layout/Breadcrumbs.astro";
import { Hammer, CheckCircle2, Clock, DollarSign } from "@lucide/astro";
import DrywallRepairImage from "@/assets/Drywall_repair.webp";

const benefits = [
  "Expert hole patching and repair",
  "Texture matching for seamless results",
  "Complete drywall installation",
  "Professional finishing and painting",
  "Water damage repair",
  "Crack and joint repair",
];

const faqs = [
  {
    question: "How long does drywall repair take?",
    answer:
      "Most small to medium repairs take 1-2 days, including drying time. Larger projects might take 3-5 days depending on the scope.",
  },
  {
    question: "Can you match the existing texture?",
    answer:
      "Yes! We're experts at matching existing texturesâ€”whether it's smooth, orange peel, knockdown, or popcorn. We ensure the repair blends seamlessly.",
  },
  {
    question: "Do you handle water-damaged drywall?",
    answer:
      "Absolutely. We assess water damage, remove affected drywall, address any underlying issues, and install new drywall with proper moisture barriers when needed.",
  },
  {
    question: "What's included in the price?",
    answer:
      "Our quotes include all materials, including drywall, tape, mud, primer, labor, cleanup, and texture matching. We provide transparent pricing with no hidden fees.",
  },
];
---

<BaseLayout
  title="Professional Drywall Repair Services in Ogden, Utah | Johnny Pro Handyman"
  description="Expert drywall repair and installation in Ogden and Weber County. Hole patching, texture matching, water damage repair. Licensed, insured, and trusted. Estimates available."
>
  <SchemaService
    serviceName="Drywall Repair"
    serviceType="Drywall Installation and Repair"
    description="Professional drywall repair services including hole patching, texture matching, and complete installations throughout Utah."
  />

  <Breadcrumbs />

  <ServiceIntro
    title="Professional Drywall Repair"
    description="From small holes to complete wall installations, we provide expert drywall services that restore your walls to like-new condition. Our skilled team ensures seamless repairs that blend perfectly with your existing home."
    icon={Hammer}
    benefits={benefits}
    image={DrywallRepairImage.src}
  />

  <!-- Services Details -->
  <section class="py-20 bg-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 font-inter text-center">
        Our Drywall <span class="text-orange-500">Services</span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          [
            {
              title: "Hole & Crack Repair",
              description:
                "Expert repair of holes, cracks, and dents of any size. We'll make your walls look brand new again.",
              icon: Hammer,
            },
            {
              title: "Texture Matching",
              description:
                "Precise texture matching ensures repairs blend seamlessly with existing walls.",
              icon: CheckCircle2,
            },
            {
              title: "Water Damage Repair",
              description:
                "Complete water damage assessment and repair, including mold prevention.",
              icon: Clock,
            },
            {
              title: "New Installation",
              description:
                "Professional drywall installation for new construction or remodeling projects.",
              icon: Hammer,
            },
            {
              title: "Finishing & Painting",
              description:
                "Complete finishing services including taping, mudding, sanding, and painting.",
              icon: CheckCircle2,
            },
            {
              title: "Affordable Pricing",
              description:
                "Competitive rates with transparent pricing. Estimates on all projects.",
              icon: DollarSign,
            },
          ].map((service) => (
            <div class="bg-gray-900/50 border border-white/10 rounded-xl p-6 hover:border-orange-500/50 transition-all">
              <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mb-4">
                <service.icon class="w-6 h-6 text-white" />
              </div>
              <h3 class="text-xl font-bold text-white mb-3 font-inter">
                {service.title}
              </h3>
              <p class="text-gray-400 leading-relaxed">{service.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-linear-to-b from-black to-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 font-inter text-center">
        Our <span class="text-orange-500">Process</span>
      </h2>

      <div class="space-y-8">
        {
          [
            {
              step: "1",
              title: "Assessment",
              description:
                "We inspect the damage and discuss your needs to provide an accurate estimate.",
            },
            {
              step: "2",
              title: "Preparation",
              description:
                "We protect your furniture and floors, then prepare the work area.",
            },
            {
              step: "3",
              title: "Repair",
              description:
                "We expertly repair or install drywall using quality materials and proven techniques.",
            },
            {
              step: "4",
              title: "Finishing",
              description:
                "We apply texture, prime, and paint to match your existing walls perfectly.",
            },
            {
              step: "5",
              title: "Cleanup",
              description:
                "We thoroughly clean the work area, leaving your home spotless.",
            },
          ].map((item) => (
            <div class="flex gap-6 items-start">
              <div class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center shrink-0 text-2xl font-bold text-white">
                {item.step}
              </div>
              <div>
                <h3 class="text-2xl font-bold text-white mb-2 font-inter">
                  {item.title}
                </h3>
                <p class="text-gray-400 text-lg leading-relaxed">
                  {item.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <FAQ faqs={faqs} />
  <CTA />
</BaseLayout>
