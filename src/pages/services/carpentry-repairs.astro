---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ServiceIntro from "@/components/sections/ServiceIntro.astro";
import FAQ from "@/components/sections/FAQ.astro";
import CTA from "@/components/sections/CTA.astro";
import SchemaService from "@/components/seo/SchemaService.astro";
import Breadcrumbs from "@/components/layout/Breadcrumbs.astro";
import { Hammer, Ruler, Wrench, DollarSign, CheckCircle2 } from "@lucide/astro";
import CarpentryRepairImage from "@/assets/Carpentry_service.webp";

const benefits = [
  "Door Repair & Installation",
  "Crown Molding & Baseboards",
  "Cabinet Repairs & Hardware",
  "Custom Shelving",
  "Deck & Fence Repairs",
  "Furniture Assembly",
];

const faqs = [
  {
    question: "Do you install custom shelving?",
    answer:
      "Yes, I can design and build custom shelving units to fit any space in your home, from pantries and closets to garages and living rooms.",
  },
  {
    question: "Can you fix a door that won't close properly?",
    answer:
      "Absolutely. Door repairs are one of my most common requests. Whether it's sticking, rubbing, or not latching, I can adjust or repair it.",
  },
  {
    question: "Do you repair rotted wood?",
    answer:
      "Yes, I can repair or replace rotted wood on decks, siding, window frames, and trim to prevent further damage and restore structural integrity.",
  },
  {
    question: "Do you build decks or fences?",
    answer:
      "I handle deck repairs and small deck builds, as well as fence repairs and installation. Contact me to discuss your specific project.",
  },
];
---

<BaseLayout
  title="Professional Carpentry Services Utah | Woodworking & Repairs"
  description="Expert carpentry services in Utah. Door repairs, trim, molding, shelving, and wood repairs. Skilled craftsmanship for your home projects."
>
  <SchemaService
    serviceName="Carpentry Services"
    serviceType="Carpentry"
    description="Professional carpentry and wood repair services in Utah including door repairs and custom shelving."
  />

  <Breadcrumbs />

  <ServiceIntro
    title="Professional Carpentry Services"
    description="Quality craftsmanship for all your home's woodworking needs. From structural repairs to decorative finish work, I provide precision carpentry services that enhance your home's value and functionality."
    icon={Hammer}
    benefits={benefits}
    image={CarpentryRepairImage.src}
  />

  <!-- Services Details -->
  <section class="py-20 bg-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 font-inter text-center">
        My Carpentry <span class="text-orange-500">Services</span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          [
            {
              title: "Door Repair",
              description:
                "Fixing sticking, squeaking, or misaligned doors, locks, and hinges.",
              icon: Wrench,
            },
            {
              title: "Trim & Molding",
              description:
                "Installation and repair of baseboards, crown molding, and window casings.",
              icon: Ruler,
            },
            {
              title: "Cabinet Repair",
              description:
                "Repairing cabinet doors, drawers, hinges, and installing new hardware.",
              icon: Hammer,
            },
            {
              title: "Decks & Fences",
              description:
                "Repairs for loose boards, railings, steps, and fence panels.",
              icon: Wrench,
            },
            {
              title: "Custom Shelving",
              description:
                "Design and installation of custom shelving for any room.",
              icon: Ruler,
            },
            {
              title: "Affordable Pricing",
              description:
                "Competitive rates with transparent pricing and no hidden fees.",
              icon: DollarSign,
            },
          ].map((service) => (
            <div class="bg-gray-900/50 border border-white/10 rounded-xl p-6 hover:border-orange-500/50 transition-all">
              <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mb-4">
                <service.icon class="w-6 h-6 text-white" />
              </div>
              <h3 class="text-xl font-bold text-white mb-3 font-inter">
                {service.title}
              </h3>
              <p class="text-gray-400 leading-relaxed">{service.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-linear-to-b from-black to-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 font-inter text-center">
        My Carpentry <span class="text-orange-500">Process</span>
      </h2>

      <div class="space-y-8">
        {
          [
            {
              step: "1",
              title: "Measure & Plan",
              description:
                "I take precise measurements and plan the project to ensure a perfect fit.",
            },
            {
              step: "2",
              title: "Material Selection",
              description:
                "I help you select the right wood and materials for durability and aesthetics.",
            },
            {
              step: "3",
              title: "Craftsmanship",
              description:
                "I cut, assemble, and install with precision attention to detail.",
            },
            {
              step: "4",
              title: "Finishing",
              description:
                "I sand, caulk, and prepare the work for paint or stain.",
            },
            {
              step: "5",
              title: "Cleanup",
              description:
                "I clean up all sawdust and scraps, leaving your home tidy.",
            },
          ].map((item) => (
            <div class="flex gap-6 items-start">
              <div class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center shrink-0 text-2xl font-bold text-white">
                {item.step}
              </div>
              <div>
                <h3 class="text-2xl font-bold text-white mb-2 font-inter">
                  {item.title}
                </h3>
                <p class="text-gray-400 text-lg leading-relaxed">
                  {item.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <FAQ faqs={faqs} />
  <CTA />
</BaseLayout>
